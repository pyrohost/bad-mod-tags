# Auto detect text files and perform LF normalization
* text=auto eol=lf

# JavaScript/TypeScript
*.js text eol=lf
*.ts text eol=lf
*.mjs text eol=lf
*.cjs text eol=lf

# JSON
*.json text eol=lf

# Markdown
*.md text eol=lf

# YAML
*.yml text eol=lf
*.yaml text eol=lf

# Shell scripts
*.sh text eol=lf

# Batch files (Windows)
*.bat text eol=crlf
*.cmd text eol=crlf

# Git
.gitattributes text eol=lf
.gitignore text eol=lf

# Lock files
package-lock.json text eol=lf -diff
